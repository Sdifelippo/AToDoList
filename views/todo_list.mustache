    <div class="wrapper">
      <form action="/" method="post">
        <div class="header">
          <span class="title">Here is your todo list</span>
        </div>
        <div class="fields" id="fields">
          <input type="text" name="todo" placeholder="Add a todo" />
          {{#todos}}
          <li>{{.}}<button type="Completed">Add todo</button></li>
          {{/todos}}
        </form>
        <button type="submit" class="button"  name="button" value=""  placeholder="Add todo">Add todo</button>

        
        <p>Completed tasks</p>


        </div>
      </div>
  </body>
</html>
